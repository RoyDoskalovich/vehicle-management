{
  "name": "vehicle-management",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all -p shared:build:watch backend:dev frontend:dev",
    "build": "npm-run-all -s shared:build backend:build frontend:build",
    "shared:build": "npm --workspace @vm/shared run build",
    "shared:build:watch": "npm --workspace @vm/shared run build:watch",
    "backend:dev": "npm --workspace backend run dev",
    "backend:build": "npm --workspace backend run build",
    "frontend:dev": "npm --workspace frontend run dev",
    "frontend:build": "npm --workspace frontend run build",
    "clean": "rimraf node_modules backend/node_modules frontend/node_modules packages/shared/node_modules backend/package-lock.json frontend/package-lock.json packages/shared/package-lock.json package-lock.json",
    "test": "npm run test --workspace @vm/shared && npm run test --workspace backend"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3"
  }
}

